<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="SectionTitle" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="0,16,0,8"/>
    </Style>

    <Style x:Key="BadgeLabel" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="#1F2937"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="BackgroundColor" Value="#F3F4F6"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="0,6,8,0"/>
    </Style>

    <Style x:Key="ChipBorder" TargetType="Border">
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="16"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="#E5E7EB"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="0,6,8,0"/>
    </Style>
</ResourceDictionary>
