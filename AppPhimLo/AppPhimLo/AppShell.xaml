<Shell
    x:Class="AppPhimLo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppPhimLo"
    xmlns:view="clr-namespace:AppPhimLo.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AppPhimLo"
    Shell.NavBarIsVisible="False">

    <!-- Trang Movie_Detail đặt đầu tiên -->

    <ShellContent
      Title="Login"
  ContentTemplate="{DataTemplate view:LoginPage}" />

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}" />
      
        <ShellContent
            Title="Search"
        ContentTemplate="{DataTemplate view:SearchPage}" />

         <ShellContent
        Title="Profile"
        Icon="user.png"
        ContentTemplate="{DataTemplate view:ProfilePage}" />

    </TabBar>

    <ShellContent
        Title="Chi tiết phim"
        ContentTemplate="{DataTemplate view:Movie_Detail}"
        Route="Movie_Detail" />






</Shell>
