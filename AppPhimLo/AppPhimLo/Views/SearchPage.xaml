<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AppPhimLo.ViewModels"
             xmlns:helpers="clr-namespace:AppPhimLo.Helpers"
             x:Class="AppPhimLo.Views.SearchPage"
             Title="Tìm kiếm phim"
             BackgroundColor="#F8F9FA"
              NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <viewmodels:SearchViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="15" RowDefinitions="Auto,*,Auto">

        <!-- Thanh tìm kiếm -->
        <Frame Grid.Row="0"
               CornerRadius="10"
               HasShadow="False"
               BackgroundColor="Transparent"
               Padding="0"
               HeightRequest="44">

            <Grid ColumnDefinitions="*,Auto">

                <Entry Placeholder="Tên phim, show, diễn viên, kênh TV"
                       Text="{Binding SearchQuery}"
                       TextColor="#212121"
                       PlaceholderColor="#9E9E9E"
                       BackgroundColor="Transparent"
                       FontSize="15"
                       ReturnType="Search"
                       >
                    <Entry.Behaviors>
                        <helpers:EventToCommandBehavior EventName="Completed"
                                                        Command="{Binding SearchCommand}" />
                    </Entry.Behaviors>
                </Entry>

                <Button Grid.Column="1"
                       
                             Text="Tìm kiếm"
                             Command="{Binding SearchCommand}" />
            </Grid>

        </Frame>

        <!-- Danh sách phim -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Movies}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HasShadow="True"
                           CornerRadius="14"
                           Margin="8"
                           Padding="10"
                           BorderColor="#E0E0E0"
                           BackgroundColor="White">

                        <Grid ColumnDefinitions="100,*"
                              RowDefinitions="Auto,Auto,Auto,Auto">

                            <Image Grid.RowSpan="4"
                                   Grid.Column="0"
                                   Source="{Binding ThumbUrl}"
                                   Aspect="AspectFill"
                                   HeightRequest="140"
                                   WidthRequest="100">
                                <Image.Clip>
                                    <RoundRectangleGeometry CornerRadius="12" Rect="0,0,100,140"/>
                                </Image.Clip>
                            </Image>

                            <Label Grid.Column="1"
                                   Text="{Binding Name}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#212121"
                                   LineBreakMode="TailTruncation"
                                   Margin="8,0,0,0"/>
                            <Label Grid.Column="1" Grid.Row="1"
                                   Text="{Binding Year}"
                                   FontSize="14"
                                   TextColor="#757575"
                                   Margin="8,2,0,0"/>
                            <Label Grid.Column="1" Grid.Row="2"
                                   Text="{Binding CountryNames}"
                                   FontSize="14"
                                   TextColor="#9E9E9E"
                                   Margin="8,2,0,0"/>
                            <Label Grid.Column="1" Grid.Row="3"
                                   Text="{Binding CategoryNames}"
                                   FontSize="14"
                                   TextColor="#9E9E9E"
                                   Margin="8,2,0,0"/>
                        </Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#E3F2FD"/>
                                        <Setter Property="BorderColor" Value="#2196F3"/>
                                        <Setter Property="Scale" Value="1.02"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Thanh phân trang -->
        <StackLayout Grid.Row="2" 
                     Orientation="Horizontal" 
                     HorizontalOptions="Center"
                     Margin="0,10,0,0"
                     Spacing="10"
                     IsVisible="{Binding HasMovies}">

            <Button Text="⟨ Trước"
                    Command="{Binding PreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}" />

            <Label Text="{Binding CurrentPage}"
                   FontSize="16"
                   VerticalOptions="Center" />

            <Label Text="/" 
                   FontSize="16"
                   VerticalOptions="Center" />

            <Label Text="{Binding TotalPages}"
                   FontSize="16"
                   VerticalOptions="Center" />

            <Button Text="Tiếp ⟩"
                    Command="{Binding NextPageCommand}"
                    IsEnabled="{Binding CanGoNext}" />
        </StackLayout>

    </Grid>
</ContentPage>
